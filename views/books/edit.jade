extends ../layout
block content
  .sideNav
    a(href='/books')
      .sideNavBooks.active
        img.sidecon(src='/images/icon.png')
        p books
    a(href='/authors')
      .sideNavAuthors
        img.sidecon(src='/images/icon.png')
        p authors
  .pageCont
    h3 Edit Book
    label(for='title') Title
    br
    input(type="text" name='title' value='#{books.title}')
    br
    label(for='genre') Genre
    br
    input(type="text" name='genre' value='#{books.genre}')
    br
    label(for='img') Cover Image URL
    br
    input(type="text" name='img' value='#{books.cover}')
    br
    label(for='desc') Description
    br
    textarea(name='desc' rows=5) #{books.description}
    br
    label Select Authors
    for writer in writers
      p.check
        input(type='checkbox' value=writer.id name='author')
        label #{writer.firstName} #{writer.lastName}
      
