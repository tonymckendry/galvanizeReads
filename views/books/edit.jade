extends ../layout
block content
  .sideNav
    a(href='/books')
      .sideNavBooks.active
        img.sidecon(src='/images/icon.png')
        p books
    a(href='/authors')
      .sideNavAuthors
        img.sidecon(src='/images/icon.png')
        p authors
  .pageCont
    h3 Edit Book
    form(action='/books/#{books.id}' method='post')
      label(for='title') Title
      br
      input(type="text" name='title' value='#{books.title}')
      br
      label(for='genre') Genre
      br
      input(type="text" name='genre' value='#{books.genre}')
      br
      label(for='img') Cover Image URL
      br
      input(type="text" name='cover' value='#{books.cover}')
      br
      label(for='desc') Description
      br
      textarea(name='description' rows=5) #{books.description}
      br
      label Select Authors
      for writer in writers
        p.check
          input(type='checkbox' value=writer.id name='author' + writer.id checked=(arr.indexOf(writer.id) > -1))
          label #{writer.firstName} #{writer.lastName}
      br
      input(value=writers.length hidden='true' name='authCount')
      input.sub(type='submit')
      
